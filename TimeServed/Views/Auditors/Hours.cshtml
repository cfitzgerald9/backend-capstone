@model TimeServed.Models.ViewModels.AttorneyReport

@{
    ViewData["Title"] = "Hours";
}
    <head>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js" type="text/javascript"></script>
        <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    </head>
    <body>
        <h1>Hours worked</h1>

        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>
                        Attorney
                    </th>
                    <th>
                        Total hours
                    </th>
                    <th>
                        Monthly hours
                    </th>
                </tr>
            </thead>
            <tbody class="table-active">
                @foreach (var item in Model.attorneys)
                {
                    List<TimeSpan> baseTimeSpan = new List<TimeSpan>();
                    var totalTime = TimeSpan.Zero;
                    var monthlyTime = TimeSpan.Zero;
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        @foreach (var item2 in Model.appointments.Where(a => a.ApplicationUserId == item.Id))
                        {
                            totalTime = totalTime + item2.TimeSpent();
                        }
                    <td class="totalHours">
                        @(Math.Round(totalTime.TotalHours * 4, MidpointRounding.ToEven) / 4)
                    </td>
                        @foreach (var item2 in Model.appointments.Where(a => a.ApplicationUserId == item.Id && a.VisitDateStart.Month == DateTime.Now.Month))
                        {
                            monthlyTime = monthlyTime + item2.TimeSpent();
                        }
                    <td>
                        @(Math.Round(monthlyTime.TotalHours* 4, MidpointRounding.ToEven) /4)
                    </td>
                    </tr>
                }
            </tbody>
        </table>
        <div Style="font-family: Corbel; font-size: large ;  text-align:center; " class="row">
            <div style="width:100%;height:100%; padding-top: 2rem; ">
                <canvas id="myChart" style="padding: 0;margin: auto;display: block; background-color: #abb6c2; border: 3px solid #4E5D6C; font-weight: bold;"> </canvas>
            </div>
        </div>
     
    </body>
    <script>
        var hourArray = @Html.Raw(Json.Serialize(ViewBag.hours));
        var nameArray = @Html.Raw(Json.Serialize(ViewBag.names));
        var appointmentArray = @Html.Raw(Json.Serialize(ViewBag.appointments));
        var hours = document.getElementsByClassName("totalHours");
        var blarg = []
        for (i = 0; i < hours.length; i++) { 
            blarg.push(hours[i].textContent);
}
        
    var dataT = {
            labels: nameArray,
            datasets: [{
                label: "Attorneys",
      
                data: blarg,
                fill: false,
                backgroundColor: ["#DF691A", "#2B3E50", "#316135", "#663d3d", "#786372"],
                borderColor: ["#DF691A", "#2B3E50", "#316135", "#663d3d", "#786372"],
                borderWidth: 1
                }]
            };
        var ctx = $("#myChart").get(0).getContext("2d");
       
    var myNewChart = new Chart(ctx, {
            type: 'bar',
            data: dataT,
            options: {
                responsive: true,
                title: { text: 'Attorney' },
                legend: { postion: 'bottom' },
                scales: {
                xAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: false, labelString: '' } }],
                yAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: true, labelString: 'Attorney Hours' }, ticks: { stepSize: 10, beginAtZero: true } }]
            },
        }
        });
    
    </script>
