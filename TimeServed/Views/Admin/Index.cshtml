@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";

}

<h1 class="bg-info text-white">All Users</h1>
<a asp-action="Create" class="btn btn-secondary">Create a User</a>


@foreach (ApplicationUser user in Model)
{
    @if (user.UserRole != "Admin") {
        <table class="table table-sm table-bordered">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                @if(user.UserRole != null)
                {
                    <td>@user.UserRole</td>
                }
                else
                {
                    <td>Admin</td>
                }
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id">Details</a> | <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        </table>
    }
}