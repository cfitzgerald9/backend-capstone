@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";

}

<h1 class="bg-info text-white">All Users</h1>
<a asp-action="Create" class="btn btn-secondary">Create a User</a>


@foreach (ApplicationUser user in Model)
{
    @if (user.UserRole == "Guard")
    {
        <h3>Guards</h3>
        <table class="table table-sm table-bordered">
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.UserRole</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id">Details</a> | <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        </table>
    }
    @if (user.UserRole == "Attorney")
    {
        <h3>Attorneys</h3>
        <table class="table table-sm table-bordered">
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.UserRole</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id">Details</a> | <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        </table>
    }
    @if (user.UserRole == "Auditor")
    {
        <h3>Guards</h3>
        <table class="table table-sm table-bordered">
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.UserRole</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id">Details</a> | <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        </table>
    }
}