@model TimeServed.Models.ViewModels.AttorneyReport

@{
    ViewData["Title"] = "Index";
}

<h1>Hours worked</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Attorney
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hoursWorked)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.attorneys)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                @foreach (var item2 in Model.hoursWorked)
                {
                    if (Model.hoursWorked.Count > 0)
                    {

                        <td>
                            @Html.DisplayFor(modelItem => item2.TotalMinutes)
                        </td>

                    }
                    else
                    {
                    <tr>
                        <td>
                            Nothing to display!
                        </td>
                    </tr>
                }
            }
                </tr>

            }

    </tbody>
</table>
