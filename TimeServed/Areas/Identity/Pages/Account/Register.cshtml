@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="align-self-center" style="margin: auto; width: 60vw; margin-left:25vw">
    <img src="~/favicon.png" style="height: 10vh; margin-left:4vw">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style=" margin-left:2.5vw">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.StreetAddress"></label>
                <input asp-for="Input.StreetAddress" class="form-control" />
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <label style="width:50vw; margin:auto; padding-bottom:1rem">
                Is this an attorney account? Yes:
                <input type="checkbox" onchange="valueChanged()" id="UserRole" style="padding:initial">
            </label>
            <div class="form-group" id="AttorneyId">
                <label asp-for="Input.AttorneyId" class="control-label"></label>
                <input asp-for="Input.AttorneyId" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary" style="margin-left:5vw; margin-top:3vh">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        function valueChanged() {
            var chk = $('#UserRole').is(':checked');
            if (chk == true) {
                $("#AttorneyId").show();  // checked
            }
            else {
                $("#AttorneyId").hide();  // unchecked
            }
        };
        $(document).ready(function () {
            valueChanged();
        });
    </script>
}